{
  "name": "butternovel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "prisma generate && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "dotenv -e .env -- npx prisma generate",
    "db:push": "dotenv -e .env -- npx prisma db push",
    "db:seed": "dotenv -e .env -- npx tsx scripts/seed-categories.ts",
    "db:seed-admin": "dotenv -e .env -- npx tsx scripts/seed-admin-user.ts",
    "db:set-admin": "dotenv -e .env -- npx tsx scripts/set-admin-role.ts",
    "db:studio": "dotenv -e .env -- npx prisma studio",
    "db:diagnose": "dotenv -e .env -- npx tsx scripts/diagnose-authors.ts",
    "db:fix-authors": "dotenv -e .env -- npx tsx scripts/fix-authors.ts",
    "cache:clear": "dotenv -e .env -- npx tsx scripts/clear-redis-cache.ts",
    "tags:cleanup": "dotenv -e .env -- npx tsx scripts/cleanup-tags.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@sentry/nextjs": "^10.25.0",
    "@types/nodemailer": "^7.0.4",
    "@upstash/redis": "^1.35.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "lucide-react": "^0.552.0",
    "next": "^16.0.7",
    "next-auth": "^5.0.0-beta.30",
    "nodemailer": "^7.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "recharts": "^3.3.0",
    "use-debounce": "^10.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prisma": "^6.19.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  }
}
